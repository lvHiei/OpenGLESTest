<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lvhiei.openglestest.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_firstGLESPrograme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="first gles program"/>

            <Button
                android:id="@+id/btn_drawTriangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawTriangle"/>

            <Button
                android:id="@+id/btn_drawSquare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawSquare"/>

            <Button
                android:id="@+id/btn_drawCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawCircle"/>

            <Button
                android:id="@+id/btn_drawCube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawCube"/>

            <Button
                android:id="@+id/btn_drawColorCube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawColorCube"/>

            <Button
                android:id="@+id/btn_translateColorCube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="translateColorCube"/>

            <Button
                android:id="@+id/btn_rotateColorCube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="rotateColorCube"/>

            <Button
                android:id="@+id/btn_scaleColorCube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="scaleColorCube"/>

            <Button
                android:id="@+id/btn_drawBall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawBall"/>

            <Button
                android:id="@+id/btn_textureSquare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="textureSquare"/>

            <Button
                android:id="@+id/btn_textureCube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="textureCube"/>

            <Button
                android:id="@+id/btn_textureBall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="textureBall"/>

            <Button
                android:id="@+id/btn_drawSun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawSun"/>

            <Button
                android:id="@+id/btn_drawSolarSystem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="drawSolarSystem"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
